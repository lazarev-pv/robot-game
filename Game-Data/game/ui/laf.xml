<lookAndFeel xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="laf.xsd">
    <resources>
        <font file="default.ttf" name="default" />
        <sprite file="ui.atlas" />
        <sprite file="common_icons.atlas" />
        <sprite file="cb_n.png" />
        <sprite file="cb_s.png" />
        <sprite file="hb.png" />
        <sprite file="menu.png" name="menu" top="8" left="8" right="8" bottom="8" />
        <sprite file="hb_back.png" name="hb_back" top="8" left="8" right="8" bottom="8" />
        <sprite file="menu_selection.png" name="menu_selection" top="8" left="8" right="8" bottom="8" />
        <sprite file="dialog.png" name="dialog" top="33" left="25" right="25" bottom="10" />
        <sprite file="scroller.png" top="2" left="2" right="2" bottom="2" />
        <sprite file="hovered_scroller.png" top="2" left="2" right="2" bottom="2" />
    </resources>
    <defaultColor hex="FFFFFF" />
	<font size="18" face="default" />
	<buttons borderThickness="0.005" animatedImage="buttons">
		<normal>
            <font size="18">
                <textColor hex="000000" />
            </font>
            <image>normal</image>
		</normal>
		<hovered>
            <image>hovered</image>
            <font size="18">
                <textColor hex="000000" />
            </font>
		</hovered>
		<pushed>
            <image>pushed</image>
            <font size="18">
                <textColor hex="000000" />
            </font>
		</pushed>
	</buttons>
	<dialogs image="dialog">
		<capture>
			<font size="18">
                <textColor hex="FFFFFF" />
            </font>
			<color hex="000000" a="0.4" />
		</capture>
		<background borderThickness="0.01" >
			<!--<backColor r="0.5" g="0.5" b="1" />-->
			<borderColor r="1" g="1" b="1" />
            <backColor hex="010101" a="0.4" />
		</background>
	</dialogs>	
    <menu image="menu" hoverImage="menu_selection">
        <font size="18">
           <textColor hex="FFFFFF" />
        </font>
        <padding top="4" bottom="4" left="5" right="5"/>
    </menu>
    <inputField 
        borderThickness="0.005" cursorHW="1"
        image="input" normal="normal" focused="focused" >
        <font size="18">
           <textColor hex="000000" />
        </font>
        <backColor hex="FFFFFF" />
        <disBackColor hex="BABAB3" />
        <selectColor hex="F8987C" a="1" />
        <borderColor hex="000000" />
        <selectedBorderColor hex="E75C2D" />
        <cursorColor hex="0000FF" />
        <padding left="7" top="0" right="7" down="0" />
    </inputField>	
    <checkbox normal_image="cb_n"
    		  checked_image="cb_s"
    		  hw="8"
    		  hh="8" />
 	<slider baseHH="7" hh="10" markLen="10" >
    	<recColor hex="000000" />	
    	<markColor hex="F4F3F3" />	
    	<texColor hex="FFFFFF" />	
    </slider>
    <labelsList borderWidth="2" >
        <padding left="10" top="7" right="10" down="7" />
        <normalTextColor hex="000000" />
        <selectedTextColor hex="FFFFFF" />
        <selectionColor hex="455ede" />
        <backgroundColor hex="FFFFFF" />
        <borderColor hex="999999" />
        <scroller image="scroller" hoveredImage="hovered_scroller" width="10" height="25" borderWidth="2">
            <backColor hex="f5f5f5"/>
            <borderColor hex="e6e6e6" />
        </scroller>
    </labelsList>
    <imagePicker>
        <labelsOffset x="-0.24" y="-0.00" z="0.1" />
        <labelsSize x="0.15" y="0.44"  />
        <imageBorderColor hex="999999" />
        <imageOffset x="0.15" y="0.00" z="0.1" />
        <imageSize x="0.19" y="0.35" />
        <baseSize x="0.4" y="0.5" />
    </imagePicker>
    <healthbar
            hh="10"
            image="hb"
            backImage="hb_back"
            borderThickness="8" />
    <caption hh="10" >
        <color r="0.1647" g="0.1647" b="0.1647" a="1.0" />
        <textColor hex="FFFFFF" />
    </caption>
</lookAndFeel>
